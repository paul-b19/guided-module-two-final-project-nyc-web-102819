<h2><%= @calendar.name %></h2>
<% if flash[:notice] %>
  <h2><div class="notice"><%= flash[:notice] %></div></h2>
<% end %>
<hr>

<%= month_calendar events: @meetings do |date, meetings| %>
    <%= date %>
  
    <% meetings.each do |meeting| %>
      <div>
        <%= meeting.name %>
      </div>
    <% end %>
<% end %>


<h3><%= button_to( "New Meeting", new_meeting_path, :method => :get ) %> </h3>
<h3><%= link_to "Back to Company Dashboard", company_path(session[:the_company]) %></h3>