<h2 style="color:#6610f2"> Company Dashboard </h2>

<hr>

<h4 style="padding-left:20px"> Company: <%= @company.name %></h4>
<h4 style="padding-left:20px"> Description: <%= @company.description %></h4>
<h4 style="padding-left:20px"> Location: <%= @country %></h4>
<h4 style="padding-left:20px"> Time zone: <%= @company.time_zone_offset %></h4>
<h4 style="padding-left:20px"> Work days: <%= @work_days %></h4>
<h4 style="padding-left:20px"> Open: <%= @company.open_time %> to <%= @company.close_time %> </h4>

<hr>

<h4 style="padding-left:20px"> Select Calendar: </h4>
<br>
<% if @calendars %>
  <% @calendars.each do |calendar| %>
    <ul>
      <li><h4><%= link_to calendar.name, calendar_path(calendar) %></h4></li>
    </ul>
  <% end %>
<% else %>
  <h4 style="color:Tomato;padding-left:20px"> <%=@company.name%> has not created any shared calendars. </h4> 
  <br>
  
<% end %>
